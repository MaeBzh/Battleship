<Window x:Class="Battleship.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Battleship"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="900">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox x:Name="txtBoat"  Grid.Column="0" Grid.Row="0">boat</TextBox>
        <TextBox x:Name="txtX"  Grid.Column="1" Grid.Row="0"></TextBox>
        <Button>
            <Rectangle Height="40" Width="40" Fill="Blue"/>
        </Button>
    </Grid>
</Window>
