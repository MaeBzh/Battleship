<Page x:Class="Battleship.Views.GamePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Battleship.Views"
        mc:Ignorable="d"
        Title="GamePage" Height="450" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="20px"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="20px"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="iaGrid" Grid.Column="0">

        </Grid>
        <Grid x:Name="playerGrid" Grid.Column="2">

        </Grid>
        <Grid x:Name="gameInfos" Grid.Column="4" >
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="8*"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Button x:Name="btn_random" Grid.Row="0" Click="Random_placement">Placement aléatoire</Button>
            <TextBlock x:Name="turn" Grid.Row="1"></TextBlock>
        </Grid>
    </Grid>
</Page>
